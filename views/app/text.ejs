}

/* Wrapper for page content to push down footer */
#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100vh;
  /* Negative indent footer by it's height */
  margin: 0 auto -15vh;
}

#up-half-wrap {
  min-height: 50vh;
  height: 50vh;
  /* Negative indent footer by it's height */
  margin: 0 auto -15%;
}

#bot-half-wrap {
  min-height: 50vh;
  height: 50vh;
  /* Negative indent footer by it's height */
  margin: 0 auto -15vh;
}

.allport {
  min-height: 100vh;
  height: auto !important;
  height: 100vh;
  background-color: black;
}

/* Set the fixed height of the footer here */
#push,
#footer {
  height: 15vh;
}
#footer {
}

.overlay {
  background-color: rgba(25, 25, 28, 0.67);
  width: 100vw;
  height: 100vh;"
}

/* Lastly, apply responsive CSS fixes as necessary */
@media (max-width: 767px) {
  #footer {
    margin-left: -20px;
    margin-right: -20px;
    padding-left: 20px;
    padding-right: 20px;
  }
}

#VContainer {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
}

#VContainer video {
    position: absolute;
    left: 50%;
    top: 50%;
    /* The following will size the video to fit the full container. Not necessary, just nice.*/
    min-width: 100%;
    min-height: 100%;
    -webkit-transform: translate(-50%,-50%);
    -moz-transform: translate(-50%,-50%);
    -ms-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    z-index: 0;
}

#VContainer div {
    position: relative;
    z-index: 1;
}

